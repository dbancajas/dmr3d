/////////////////////////////////////////////////////////////////////////////////
// Uniprocessor one-level line functions
//
void
cmp_incl_l1_line_t::init(cache_t *_cache, addr_t _idx, uint32 _lsize)
{
	line_t::init(_cache, _idx, _lsize);
	state = StateInvalid;
	dirty = false;
}

void
cmp_incl_l1_line_t::wb_init(addr_t tag, addr_t idx, line_t *cache_line)
{
	line_t::wb_init(tag, idx, cache_line);
	state = StateModToInv;
	dirty = true;
}

void
cmp_incl_l1_line_t::reinit(addr_t _tag)
{
	line_t::reinit(_tag);
	state = StateInvalid;
	dirty = false;
}	
	
bool
cmp_incl_l1_line_t::is_free()
{
	return (state == StateInvalid);
}	
	
bool
cmp_incl_l1_line_t::can_replace()
{
	// Can replace if not in a busy state
	return (state == StateInvalid ||
			state == StateNotPresent ||
			state == StateShared || state == StateExclusive ||
			state == StateModified);
}

bool
cmp_incl_l1_line_t::is_stable()
{
	// Same as can_replace
	return (can_replace());
}

void
cmp_incl_l1_line_t::set_state(uint32 _state)
{
	state = _state;
}
	
uint32
cmp_incl_l1_line_t::get_state()
{
	return state;
}

void
cmp_incl_l1_line_t::set_dirty(bool _dirty)
{
	dirty = _dirty;
}
	
bool
cmp_incl_l1_line_t::is_dirty()
{
	return dirty;
}

	
void
cmp_incl_l1_line_t::to_file(FILE *file)
{
	fprintf(file, "%d %u ", dirty ? 1 : 0, state);
	line_t::to_file(file);
}

void
cmp_incl_l1_line_t::from_file(FILE *file)
{
	int temp_dirty;
	fscanf(file, "%d %u ", &temp_dirty, &state);
	dirty = (temp_dirty == 1);

	line_t::from_file(file);
}

