cmp_incl_l1_cache_t::cmp_incl_l1_cache_t(string name, cache_config_t *conf,
	uint32 _id, conf_object_t *_cpu, uint64 prefetch_alg)
	: tcache_t<cmp_incl_l1_protocol_t> (name, 2, conf, _id, prefetch_alg), cpu(_cpu)
	// Two links for this protocol
{ }

uint32
cmp_incl_l1_cache_t::get_action(message_t *msg)
{
	upmsg_t *upmsg = NULL;
	downmsg_t *downmsg = NULL;
	if (typeid(*msg) == typeid(upmsg_t)) {
		upmsg = static_cast<upmsg_t *> (msg);
	} else if (typeid(*msg) == typeid(downmsg_t)) {
		downmsg = static_cast<downmsg_t *> (msg);
	} else {
		FAIL_MSG("Invalid msg typeid: %s\n", typeid(*msg).name());
	}
	
	if (upmsg) {
		ASSERT(downmsg == NULL);

		switch(upmsg->get_type()) {
		case simple_proc_msg_t::ProcRead:
			return ActionProcLD;
			
		case simple_proc_msg_t::ProcWrite:
			return ActionProcST;
			
		
		default:
			FAIL_MSG("Invalid message type %s\n",
					 upmsg_t::names[(int)upmsg->get_type()][0].c_str());
		}
	} else if (downmsg) {
		ASSERT(upmsg == NULL);
		
		switch(downmsg->get_type()) {
            
        case TypeDataRespShared:    
            return ActionDataShared;
        case TypeDataRespExclusive:
            return ActionDataExclusive;
        case TypeInvalidate:
            return ActionInvalidate;
        case TypeReadFwd:
            return ActionReadFwd;
        case TypeReadExFwd:
            return ActionReadExFwd;
        case TypeWriteBackAck:
            return ActionWriteBackAck;
        case TypeUpgradeAck:
            return ActionUpgradeAck;
            
		default:
			FAIL_MSG("Invalid message type %s %u %u\n",
					 downmsg_t::names[(int)downmsg->get_type()][0].c_str(),
                     downmsg->get_source(), downmsg->get_dest());
		}
	} else {
		FAIL;
	}
}

void
cmp_incl_l1_cache_t::trigger(tfn_info_t *t, tfn_ret_t *ret)
{
	ret->block_message = StallNone;
	ret->next_state = StateUnknown;
	switch(t->curstate) {

	/// NotPresent
	case StateNotPresent:
		switch(t->action) {
			
		case ActionProcLD:
            ret->block_message = can_insert_new_line(t, ret);
            if (ret->block_message != StallNone) goto block_message;
            if (!can_allocate_mshr(t, ret) || 
                !can_enqueue_request_mshr(t, ret))
            {
                ret->block_message = StallPoll;
                goto block_message;
            }
            insert_new_line(t, ret);
			allocate_mshr(t, ret);
			enqueue_request_mshr(t, ret);
			send_protocol_msg_down(t, ret, false, downmsg_t::TypeRead, true);
			ret->next_state = StateInvToShEx;
            t->trans->mark_event(MEM_EVENT_L1_MISS);
            break;
		
        case ActionProcST:
            ret->block_message = can_insert_new_line(t, ret);
            if (ret->block_message != StallNone) goto block_message;
            if (!can_allocate_mshr(t, ret) || 
                !can_enqueue_request_mshr(t, ret))
            {
                ret->block_message = StallPoll;
                goto block_message;
            }
            insert_new_line(t, ret);
			allocate_mshr(t, ret);
			enqueue_request_mshr(t, ret);
			send_protocol_msg_down(t, ret, false, downmsg_t::TypeReadEx, true);
			ret->next_state = StateInvToMod;
            t->trans->mark_event(MEM_EVENT_L1_MISS);
            break;
			
		default: goto error;
		}
		break;

	/// Invalid
	case StateInvalid:
		switch(t->action) {
			
		case ActionProcLD:
            if (!can_allocate_mshr(t, ret) || 
                !can_enqueue_request_mshr(t, ret))
            {
                ret->block_message = StallPoll;
                goto block_message;
            }
            insert_new_line(t, ret);
			allocate_mshr(t, ret);
			enqueue_request_mshr(t, ret);
			send_protocol_msg_down(t, ret, false, downmsg_t::TypeRead, true);
			ret->next_state = StateInvToShEx;
            t->trans->mark_event(MEM_EVENT_L1_MISS);
            break;
            
		case ActionProcST:
        
            if (!can_allocate_mshr(t, ret) || 
                !can_enqueue_request_mshr(t, ret))
            {
                ret->block_message = StallPoll;
                goto block_message;
            }
            insert_new_line(t, ret);
			allocate_mshr(t, ret);
			enqueue_request_mshr(t, ret);
			send_protocol_msg_down(t, ret, false, downmsg_t::TypeReadEx, true);
            t->trans->mark_event(MEM_EVENT_L1_MISS);
			ret->next_state = StateInvToMod;
            break;
        case ActionReadFwd:
            send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdNack, true);
            ret->next_state = t->curstate;
            break;
		default: goto error;
		}
		break;

	/// InvalidToMod
	case StateInvToMod:
		switch(t->action) {

		case ActionDataExclusive:
			store_data_to_cache(t, ret);
			perform_mshr_requests(t, ret);
			ret->next_state = StateModified;
            t->trans->clear_pending_event(MEM_EVENT_L1_MISS);
            deallocate_mshr(t, ret);
			break;
		case ActionReadFwd:
        case ActionReadExFwd:
        case ActionInvalidate:
            ret->block_message = StallSetEvent;
            goto block_message;
        case ActionProcLD:
        case ActionProcST:
            if (!can_enqueue_request_mshr(t, ret)) {
                ret->block_message = StallPoll;
                goto block_message;
            }
            enqueue_request_mshr(t,ret);
            ret->next_state = t->curstate;
            t->trans->mark_event(MEM_EVENT_L1_MISS);
            break;
		default: goto error;
		}
		break;

	case StateInvToShEx:
    
        switch(t->action) {
        case ActionDataShared:
            store_data_to_cache(t, ret);
            perform_mshr_requests(t, ret);
            ret->next_state = StateShared;
            t->trans->clear_pending_event(MEM_EVENT_L1_MISS);
            deallocate_mshr(t, ret);
            break;
        case ActionDataExclusive:
            store_data_to_cache(t, ret);
            perform_mshr_requests(t, ret);
            ret->next_state = StateExclusive;
            t->trans->clear_pending_event(MEM_EVENT_L1_MISS);
            deallocate_mshr(t, ret);
            break;
        case ActionReadFwd:
        case ActionReadExFwd:
        case ActionInvalidate:
            ret->block_message = StallSetEvent;
            goto block_message;
        case ActionProcLD:
            if (!can_enqueue_request_mshr(t, ret)) {
                ret->block_message = StallPoll;
                goto block_message;
            }
            enqueue_request_mshr(t,ret);
            ret->next_state = t->curstate;
            t->trans->mark_event(MEM_EVENT_L1_MISS);
            break;
        case ActionProcST:
            ret->block_message = StallSetEvent;
            goto block_message;
        default: goto error;
        }
        break;
        
	case StateShared:
		switch(t->action) {

		case ActionProcLD:
            send_protocol_msg_up(t, ret, simple_proc_msg_t::DataResp, t->trans);
            t->trans->mark_event(MEM_EVENT_L1_HIT);
            ret->next_state = StateShared;
			break;
			
		case ActionProcST:
			if (!can_allocate_mshr(t, ret) || !can_enqueue_request_mshr(t, ret)) 
            {
                ret->block_message = StallPoll;
                goto block_message;
            }
			allocate_mshr(t, ret);
			enqueue_request_mshr(t, ret);
            send_protocol_msg_down(t, ret, false, downmsg_t::TypeUpgrade, true);
			ret->next_state = StateShToMod;
			break;
			
		case ActionReplace:
            send_protocol_msg_down(t, ret, false, downmsg_t::TypeReplace, true);
			ret->next_state = StateInvalid;
			break;
        case ActionReadFwd:
            send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespShared, false);
            send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAck, true);
            ret->next_state = t->curstate;
            break;
        case ActionWriteBackAck: goto donothing;
        case ActionInvalidate:
            send_protocol_msg_down(t, ret, false, downmsg_t::TypeInvAck, true);
            send_protocol_msg_up(t, ret, upmsg_t::ProcInvalidate, t->trans);
            ret->next_state = StateInvalid;
            break;
		default: goto error;
		}
		break;


    case StateExclusive:
        switch(t->action) {
            case ActionProcLD:
                send_protocol_msg_up(t, ret, upmsg_t::DataResp, t->trans);
                ret->next_state = t->curstate;
                break;
            case ActionProcST:
                store_data_to_cache(t, ret);
                send_protocol_msg_up(t, ret, upmsg_t::DataResp, t->trans);
                ret->next_state = StateModified;
                break;
            case ActionReplace:
                if (!can_allocate_writebackbuffer()) {
                    ret->block_message = StallPoll;
                    goto block_message;
                }
                allocate_writebackbuffer(t->line);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeReplace, true);
                // The Line in the cache goes to Invalid .. Writeback buffer line
                // maintains the StateModifiedInvalid
                ret->next_state = StateInvalid;
                break;
            case ActionInvalidate:
                send_protocol_msg_up(t, ret, upmsg_t::ProcInvalidate, t->trans);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeWriteBack, true);
                ret->next_state = StateInvalid;
                break;
            case ActionReadFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespShared, false);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAck, true);
                ret->next_state = StateShared;
                break;
            case ActionReadExFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespExclusive, false);
                //send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAck, true);
                ret->next_state = StateInvalid;
                break;
                    
            default: goto error;    
                
        }
        break;
      case StateModified:
          switch(t->action) {
            case ActionProcLD:
                send_protocol_msg_up(t, ret, upmsg_t::DataResp, t->trans);
                t->trans->mark_event_no_pend(MEM_EVENT_L1_HIT);
                ret->next_state = t->curstate;
                break;
            case ActionProcST:
                send_protocol_msg_up(t, ret, upmsg_t::DataResp, t->trans);
                t->trans->mark_event_no_pend(MEM_EVENT_L1_HIT);
                ret->next_state = t->curstate;
                break;
            case ActionReplace:
                if (!can_allocate_writebackbuffer()) {
                    ret->block_message = StallPoll;
                    goto block_message;
                }
                allocate_writebackbuffer(t->line);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeWriteBack, false);
                ret->next_state = StateInvalid;
                break;
            case ActionInvalidate:
                send_protocol_msg_up(t, ret, upmsg_t::ProcInvalidate, t->trans);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeWriteBack, false);
                ret->next_state = StateInvalid;
                break;
            case ActionReadFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespShared, false);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAckData, true);
                ret->next_state = StateShared;
                break;
            case ActionReadExFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespExclusive, false);
                ret->next_state = StateInvalid;
                break;
            default: goto donothing;
          }
          break;
          
        
      case StateShToMod:
        switch (t->action) {
            case ActionProcLD:
                send_protocol_msg_up(t, ret, upmsg_t::DataResp, t->trans);
                ret->next_state = t->curstate;
                break;
            case ActionProcST:
                enqueue_request_mshr(t, ret);
                ret->next_state = t->curstate;
                break;
            case ActionUpgradeAck:
                ret->next_state = StateModified;
                perform_mshr_requests(t, ret);
                deallocate_mshr(t, ret);
                break;
            case ActionInvalidate:
                ret->next_state = StateInvToMod;
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeInvAck, true);
                break;
            case ActionReadFwd:
                ret->next_state = StateModToInv;
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespShared, false);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAck, true);
                break;
            case ActionReadExFwd:
                ret->next_state = StateModToInv;
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespExclusive, false);
                send_protocol_msg_down(t, ret, false, downmsg_t::TypeFwdAck, true);
                break;
            default : goto error;
        }
        break;
       case StateModToInv:
        switch(t->action) {
            case ActionProcLD:
            case ActionProcST:
                ret->block_message = StallSetEvent;
                goto block_message;
            case ActionInvalidate:
            case ActionWriteBackAck:
                release_writebackbuffer(get_line_address(t->address));
                ret->next_state = StateInvalid;
                break;
            case ActionReadFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespShared, true);
                ret->next_state = StateInvalid;
                break;
            case ActionReadExFwd:
                send_protocol_msg_down(t, ret, true, downmsg_t::TypeDataRespExclusive, true);
                ret->next_state = StateInvalid;
                break;
            default : goto error;
        }
        break;
		
	default:
		ASSERT(0);

	}


	/// Common return case
	ASSERT(ret->next_state != StateUnknown);
	// May not have line if in NotPresent
	if (t->line) t->line->set_state(ret->next_state);
	else ASSERT(t->curstate == StateNotPresent);

	profile_transition(t, ret);
	return;


block_message:
	ret->next_state = t->curstate;
	t->trans->mark_event(MEM_EVENT_L1_STALL);
    DEBUG_TR_FN("%s Blocking Message %u", t, ret, __func__, ret->block_message);
	profile_transition(t, ret);
	return;
	

/// Other common actions	
error:
	FAIL_MSG("%10s 0x%016llx:Invalid action: %s in state: %s\n",get_cname(), 
		t->message->address, action_names[t->action][0].c_str(),
		state_names[t->curstate][0].c_str());
	
donothing:
	ret->next_state = t->curstate;
	profile_transition(t, ret);
	return;
}

////////////////////////////////////////////////////////////////////////////////
// Helper functions
void cmp_incl_l1_cache_t::
send_protocol_msg_down(tfn_info_t *t, tfn_ret_t *ret, bool datafwd, 
    uint32 msgtype, bool addrmsg)
{
    DEBUG_TR_FN("%s", t, ret, __func__);
    addr_t addr = get_line_address(t->address);
    uint32 dest = l2_cache_ptr->get_interconnect_id(addr);;
    uint32 request_id = interconnect_id;
    
    if (datafwd || msgtype == TypeInvAck) {
        downmsg_t *in_msg = static_cast<downmsg_t *>(t->message);
        if (datafwd)
            dest = in_msg->get_requester();
        request_id = in_msg->get_requester();
    }
    
    downmsg_t *msg = new downmsg_t(t->trans, addr, get_lsize(), NULL,
        interconnect_id, dest, msgtype, request_id, addrmsg);
    stall_status_t retval = send_message(links[cmp_incl_l1_protocol_t::interconnect_link], msg);
    ASSERT(retval == StallNone);    
    
}

void cmp_incl_l1_cache_t::
send_protocol_msg_up(tfn_info_t *t, tfn_ret_t *ret, uint32 msgtype, mem_trans_t *tr)
{
    DEBUG_TR_FN("%s", t, ret, __func__);
    addr_t addr = get_line_address(t->address);
    const uint8 *data = &t->line->get_data()[get_offset(addr)];
    upmsg_t *msg = new upmsg_t(tr, tr->phys_addr, tr->size, data, msgtype);
    stall_status_t retval = send_message(links[cmp_incl_l1_protocol_t::proc_link], msg);
    ASSERT(retval == StallNone);
}
// Enqueue this read request to the MSHR for this address
void
cmp_incl_l1_cache_t::enqueue_request_mshr(tfn_info_t *t, tfn_ret_t *ret)
{
	DEBUG_TR_FN("enqueue_request_mshr", t, ret);

	addr_t addr = get_line_address(t->address);
	ASSERT(addr == t->line->get_address());
	//ASSERT(addr == t->message->address);

	mshr_t<mshr_type_t> *mshr = mshrs->lookup(addr);
	ASSERT(mshr);
	
	mshr_type_t *type = new mshr_type_t;
    type->trans = t->trans;
    //type->request_type = (t->trans->write) ? ActionProcST : ActionProcLD;
	mshr->enqueue_request(type);
}

// Send response back to processor using MSHR trans*
void
cmp_incl_l1_cache_t::perform_mshr_requests(tfn_info_t *t, tfn_ret_t *ret)
{
	addr_t addr = get_line_address(t->address);
	ASSERT(addr == t->line->get_address());
	ASSERT(addr == t->message->address);

	mshr_t<mshr_type_t> *mshr = mshrs->lookup(addr);
	ASSERT(mshr);

	DEBUG_TR_FN("perform_mshr_requests", t, ret);

    
    mshr_type_t *request = mshr->pop_request();
	ASSERT(request);
	
	while (request) {
		// Need to change the transaction in the transfer function
        //t->trans=request->trans;
		DEBUG_TR_FN("%s: sending %s to %d", t, ret, __func__, 
			simple_proc_msg_t::names[simple_proc_msg_t::DataResp][0].c_str(),
			interconnect_id);
	
		request->trans->clear_pending_event(
			MEM_EVENT_L1_MISS | 
			MEM_EVENT_L1_HIT);

		send_protocol_msg_up(t, ret, simple_proc_msg_t::DataResp, request->trans);
        request = mshr->pop_request();
	}
	
}

void cmp_incl_l1_cache_t::set_L2_cache_ptr(cmp_incl_l2_cache_t *L2)
{
    l2_cache_ptr = L2;
}

