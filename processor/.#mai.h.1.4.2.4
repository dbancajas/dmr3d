	void auto_probe_sim_parameters (void); 
	uint64 get_memory_image_size (void);
	
	int32 get_id();
    void write_checkpoint(FILE *file);
    void read_checkpoint(FILE *file);
	
	proc_stats_t *get_tstats();
    uint64      get_syscall_num();
